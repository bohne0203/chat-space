!!!
%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
  %header
  %body
    %div.wrapper
      %div.side-bar
        %div.header
          %h3.header__name
            = current_user.name
          %ul.header__icon
            %li.header__icon__list
              = link_to new_group_path do
                = fa_icon 'edit', class: 'icon'
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
        %div.thread
          =render partial: 'messages/group'
