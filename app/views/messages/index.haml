!!!
%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
  %header
  %body
    %div.wrapper
      %div.side-bar
        %div.header
          %h3.header__name
            = current_user.name
          %ul.header__icon
            %li.header__icon__list
              = link_to new_group_path do
                = fa_icon 'edit', class: 'icon'
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
        %div.thread
          =render partial: 'messages/group'
      %div.chat
        %div.header
          %div.header__group-name
            = @group.name
            %ul.header__group-name__member
              Member:
              %li.header__group-name__member__list
                = @group.users.each_entry do |user|
                  = user.name
          %input.header__edit{ type: "button",value: "Edit"}
        %div.messages
          =render @messages
        .form
          = form_for [@group, @message] do |f|
            .form__message
              = f.text_field :content, class:'form__message__text',placeholder: 'type a message'
              = f.label :image, class: 'form__mask__image' do
                = fa_icon 'picture-o', class: 'icon'
                = f.file_field :image, class: 'hidden'
            = f.submit 'Send', class: 'form__submit'
